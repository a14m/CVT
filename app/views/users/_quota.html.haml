-# Quota Title
.row
  -# Usage
  .quota
    -# Status Bar
    .col-sm-1.status{ class: user.status }

    -# Usage Title
    .col-sm-3.text-xs-left
      %h1.title= 'Usage'

    -# Usage Stats
    .col-sm-8
      %h1
        %span.percentage
          %span.usage= user.usage_percentage
          %span.sign= '%'
        %span.plan
          %span.usage= user.usage
          %span.size= "/#{user.plan_size[0...-2]}"
          %span.unit= user.plan_size[-2..-1]

.row
  .quota
    -# Status Bar
    .col-sm-1.status{ class: user.status }

    -# Valid until Title
    .col-sm-3.text-xs-left
      %span.title= 'Valid Until'

    -# Valid until Stats
    .col-sm-8.expires-at
      %span.day= user.expires_at[0..2]
      %span.month= user.expires_at[3..5]
      %span.year= user.expires_at[6..-1]
